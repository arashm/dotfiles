{
  "diagnostic.displayByAle": true,
  "languageserver": {
    "zls": {
      "command": "zls",
      "filetypes": ["zig"]
    },
    "crystal": {
      "command": "crystalline",
      "args": ["--stdio"],
      "filetypes": ["crystal"],
      "rootPatterns": ["shard.yml"]
    },
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "experimentalFeaturesEnabled": false,
        "enabledFeatures": [
          "documentSymbols",
          "documentLink",
          "hover",
          "foldingRanges",
          "selectionRanges",
          "semanticHighlighting",
          "documentHighlight",
          "inlayHint",
          "completion",
          "completionResolve",
          "codeLens",
          "definition",
          "showSyntaxTree",
          "workspaceSymbols",
          "signatureHelp"
        ],
        "formatter": "false"
      },
      "filetypes": ["ruby", "erb"]
    },
    "herb": {
      "command": "herb-language-server",
      "args": ["--stdio"],
      "filetypes": ["eruby", "erb"],
      "rootPatterns": [".git", "Gemfile"]
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "zig.zls.path": "zls",
  "html.format.templating": true,
  "html.filetypes": ["html", "erb", "eruby"],
  "html.format.enable": true,
  "css.validate": false
}
